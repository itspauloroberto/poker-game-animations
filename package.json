{
  "name": "poker",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rimraf node_modules .turbo",
    "postinstall": "turbo prune --scope=poker-native --scope=poker-web || true"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "turbo": "^2.0.0",
    "typescript": "^5.6.0",
    "eslint": "^9.9.0",
    "prettier": "^3.3.0",
    "rimraf": "^6.0.0"
  }
}
